        RecommandStatus            int64     `json:"recommandStatus"` // 推荐状态；0->不推荐；1->推荐
        VerifyStatus               int64     `json:"verifyStatus"`    // 审核状态：0->未审核；1->审核通过
        Sort                       int64     `json:"sort"`             // 排序
